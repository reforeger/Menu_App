             x:Class="Menu_APP.Views.threePage"
             BackgroundColor="AliceBlue">

    <StackLayout Orientation="Horizontal">
        <Label Text="Обзор"
               FontSize="30"
               TextColor="#ff6912"
               FontAttributes="Bold"
               HorizontalOptions="StartAndExpand"
               Padding="20"/>
        <ImageButton x:Name="bel" Source="bell.png"  WidthRequest="50" HeightRequest="50" VerticalOptions="Start" Clicked="OnActionSheetSimple_Clicked3" BackgroundColor="AliceBlue"/>
