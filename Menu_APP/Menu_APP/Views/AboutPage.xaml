<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu_APP.Views.AboutPage"
             BackgroundColor="#d5edf2">
    <ContentView x:Name="popup" >
        <StackLayout>
            <Label Text="Обзор"
               FontSize="30"
               TextColor="#ff6912"
               FontAttributes="Bold"
               HorizontalOptions="StartAndExpand"
               Padding="20"
               />
            <Label Text="Привет, ... !"
               FontSize="30"
               TextColor="#ff6912"
               FontAttributes="Bold"
               HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
               Padding="20"
               />
            <Button Text="Войти по Smart-ID" TextColor="White" BackgroundColor="Orange" Margin="120" Clicked="Signup_Clicked" HorizontalOptions="Center" ></Button>
            <Label Text="Сменить метод входа"
               FontSize="16"
               TextColor="#2f8c9e"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Padding="100"
               />
        </StackLayout>
    </ContentView>
    


</ContentPage>