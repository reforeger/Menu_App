<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Menu_APP.Views.fivePage"
             BackgroundColor="AliceBlue">
    <StackLayout Orientation="Vertical">
        <StackLayout Orientation="Horizontal">

            <Label Text="Дебетовая карточка Pluss"
               FontSize="18"
               TextColor="#ff6912"
               FontAttributes="Bold"
               HorizontalOptions="StartAndExpand"
               Padding="20"/>
            <ImageButton x:Name="bel" Source="bell.png"  WidthRequest="50" HeightRequest="50" VerticalOptions="Start" Clicked="OnActionSheetSimple_Clicked3" BackgroundColor="AliceBlue"/>
            <ImageButton x:Name="acc" Source="accc.png"  WidthRequest="50" HeightRequest="50" VerticalOptions="Start" Clicked="OnActionSheetSimple_Clicked2" BackgroundColor="AliceBlue" Padding="40"/>

        </StackLayout>
        <ImageButton x:Name="kartas" Source="karta.png"  WidthRequest="300" HeightRequest="150" VerticalOptions="Center" BackgroundColor="AliceBlue"/>
    </StackLayout>
</ContentPage>